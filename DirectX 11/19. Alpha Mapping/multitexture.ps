Texture2D shaderTexture1 : register(t0);
Texture2D shaderTexture2 : register(t1);
Texture2D shaderTexture3 : register(t2);
SamplerState SampleType : register(s0);

struct PixelInputType
{
    float4 position : SV_POSITION;
    float2 tex : TEXCOORD0;
};

float4 MultiTexturePixelShader(PixelInputType input) : SV_TARGET
{
    float4 color1;
    float4 color2;
    float4 alphaMap;
    float4 blendColor;
    
    color1 = shaderTexture1.Sample(SampleType, input.tex);
    color2 = shaderTexture2.Sample(SampleType, input.tex);
    alphaMap = shaderTexture3.Sample(SampleType, input.tex);
    
    if(color1.r != alphaMap.r)
        blendColor = (alphaMap * color1) + ((1.0 - alphaMap) * color2);
    else
        blendColor = color1 * color2 * 1.0f;
    
    blendColor = saturate(blendColor);
        
    return blendColor;
}